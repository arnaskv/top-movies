<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_movie_genre_relationship" author="arnas.kvedaravicius">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="movie_genre"/>
            </not>
        </preConditions>

        <createTable tableName="movie_genre">
            <column name="movie_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="genre_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>

        <createIndex associatedWith="" indexName="fk_movie_genre" tableName="movie_genre">
            <column name="genre_id"/>
        </createIndex>

        <addForeignKeyConstraint
                baseColumnNames="genre_id"
                baseTableName="movie_genre"
                constraintName="fk_movie_genre"
                deferrable="false"
                initiallyDeferred="false"
                onDelete="RESTRICT"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="genre"
                validate="true"/>

        <addForeignKeyConstraint
                baseColumnNames="movie_id"
                baseTableName="movie_genre"
                constraintName="fk_movie_genre"
                deferrable="false"
                initiallyDeferred="false"
                onDelete="RESTRICT"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="movie"
                validate="true"/>

        <rollback>
            <dropTable tableName="movie_genre"/>
        </rollback>
    </changeSet>
</databaseChangeLog>