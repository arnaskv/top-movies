<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_movie_table" author="arnas.kvedaravicius">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="movie"/>
            </not>
        </preConditions>

        <createTable tableName="movie">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="tinytext">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="float">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="movie"/>
        </rollback>
    </changeSet>

    <changeSet id="add_movie_popularity_overview_posterpath_columns" author="arnas.kvedaravicius">
        <addColumn tableName="movie">
            <column name="overview" type="text">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="movie">
            <column name="popularity" type="float">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="movie">
            <column name="poster_path" type="tinytext">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="movie" columnName="overview"/>
            <dropColumn tableName="movie" columnName="popularity"/>
            <dropColumn tableName="movie" columnName="poster_path"/>
        </rollback>
    </changeSet>
</databaseChangeLog>