<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_movie_table" author="arnas.kvedaravicius">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="movie"/>
            </not>
        </preConditions>

        <createTable tableName="movie">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="tinytext">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="overview" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="popularity" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="poster_path" type="tinytext">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="movie"/>
        </rollback>
    </changeSet>
</databaseChangeLog>